<h1>Sessions#new</h1>

    <div class="container">
        <div class="row">
            <header class="mx-auto">
                <h1>わんにゃフル！！ディッシュ☆☆☆</h1>
            </header>
        </div>
        
        <%#ログイン失敗時のフラッシュ用の記述　applicationController.rbとsessionsController.rbにも関連の記述あり%>
        <% flash.each do |key, value| %>
            <p class="alert alert-<%= key %>">
              <%= value %>
            </p>
        <% end %>
    </div>


    <div class="container">
        <div class="row">
            <div class="col-sm-8 offset-sm-2">
                <div class="form-group">
                    <%=form_for :session, url: login_path do |f| %>
                    <label for="email">メールアドレス</label>
                    <input type="email" id="email" name="session[email]" class="form-control">

                    <label for="password">パスワード</label>
                    <input type="password" id="password" name="session[password]" class="form-control">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">ログイン</button>
                </div>
                <% end %>
                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" name="auto" id="auto" value="auto" class="form-check-input">
                        <label for="auto" class="form-check-label">自動ログイン</label>
                    </div>
                </div>
                <p class="text-center">または<br>SNSでログイン</p>
                <div class="text-center">
                    <div class="new">
                        <a href="/signup"><button type="button" class="btn btn-primary">新規会員登録はこちら</button>
                    </div>
                </div>
            </div>
        </div>
    </div>